<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appbar"
            android:layout_margin="0dp"
            android:paddingTop="50dp"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_anchor="@+id/appbar"
            app:layout_anchorGravity="top|center"
            tools:ignore="NotSibling">

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="-50dp"
                    android:padding="11dp"
                    android:text="@string/app_name"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/get_list_sort_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-50dp"
                    android:backgroundTint="#2980D6"
                    android:text="@string/option_sort_list_distance"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />
                <Button
                    android:id="@+id/get_list_sort_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="-49dp"
                    android:backgroundTint="#2980D6"
                    android:text="@string/option_sort_list_rating"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />
                <Button
                    android:id="@+id/get_list_sort_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="280dp"
                    android:layout_marginTop="-49dp"
                    android:backgroundTint="#2980D6"
                    android:text="@string/option_sort_list_price"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF" />

            </android.support.design.widget.AppBarLayout>

        </android.support.design.widget.AppBarLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>